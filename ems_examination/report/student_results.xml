<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="student_result">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-set="paperformat" t-value="'report_paperformat_custom'" />
                    <div class="page">
                        <style>
                            .oe_structure {
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                padding: 10px;
                            }
                        
                            .ministry-section {
                                flex: 1;
                            }
                        
                            .name-section {
                                flex: 1;
                                text-align: center;
                            }
                        
                            .school-section {
                                flex: 1;
                                text-align: right;
                            }
                        
                            .ministry-logo {
                                max-height: 85pt;
                                max-width: 100%;
                            }
                        
                            .ministry-name,
                            .school-name {
                                margin: 0;
                            }
                        
                            .school-logo {
                                max-height: 85pt;
                                max-width: 100%;
                            }
                            .student-info {
                                border: 1px solid #000;
                                padding: 10px;
                                margin-bottom: 20px;
                            }
                        
                            .info-row {
                                display: flex;
                                justify-content: space-between;
                                margin-bottom: 5px;
                            }
                        
                            .info-label {
                                flex: 1;
                                font-weight: bold;
                            }
                        
                            .info-value {
                                flex: 2;
                            }
                            .results-section {
                                width: 49%; /* Adjust as needed */
                                float: left;
                                padding: 10px;
                            }
                        
                            .attendance-section {
                                width: 49%; /* Adjust as needed */
                                float: right;
                                padding: 10px;
                            }
                        
                            .table {
                                width: 100%;
                                border-collapse: collapse;
                            }
                        
                            .table th, .table td {
                                border: 1px solid #000;
                                padding: 5px;
                                text-align: center;
                            }
                        </style>
                        <div class="oe_structure">
                            <div class="ministry-section">
                                <img class="ministry-logo img" src="ems_examination/static/description/logo.png" alt="Ministry Logo"/>
                            </div>
                            <div class="name-section">
                                <p class="ministry-name fw-bold">Ministry of Education</p>
                                <p class="ministry-name fw-bold">Kabul Education  </p>
                                <p class="ministry-name fw-bold">Ministry of Education</p>
                                <p class="school-name fw-bold"><t t-esc="o.company_id.name"/></p>
                            </div>
                            <div class="school-section">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Company Logo" class="school-logo"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="student-info table" style="width:80%;float: left;">
                                <div class="info-row">
                                    <div class="info-label">Name:</div>
                                    <div class="info-value"><t t-esc="o.student_id.name"/></div>
                                    <div class="info-label">Father Name:</div>
                                    <div class="info-value"><t t-esc="o.student_id.father_name"/></div>
                                </div>
                                <div class="info-row">
                                    <div class="info-label">Class:</div>
                                    <div class="info-value"><t t-esc="o.class_id.display_name"/></div>
                                    <div class="info-label">Teacher:</div>
                                    <div class="info-value"><t t-esc="o.exam_id.examination_line_ids.teacher_id.class_id.name"/></div>
                                </div>
                                <div class="info-row">
                                    <div class="info-label">Year:</div>
                                    <div class="info-value"><t t-esc="o.exam_id.academic_year"/></div>
                                    <div class="info-label">Exam Type:</div>
                                    <div class="info-value"><t t-esc="o.exam_type"/></div>
                                </div>
                            </div>
                            <div class="student-image" style="width:20%;float: right; heigth:200px;">
                                <img t-if="o.student_id.image" t-att-src="image_data_uri(o.student_id.image)" alt="student image" class="rounded float-right" style="max-width: 100%; max-height: 120px; margin-top: 0px; float: right;"/>
                            </div>
                            <t t-if="o.exam_type == 'mid-term'">
                                <div class="col-md-4 results-section">
                                    <table class="table subject-marks">
                                        <thead>
                                            <tr style="background-color:#B6FFFA;">
                                                <th>Subjects</th>
                                                <th>Mid Marks</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.examination_result_line_ids" t-as="line">
                                                <tr>
                                                    <td><t t-esc="line.subject_id.name"/></td>
                                                    <t t-if="line.mid_mark &lt; 16">
                                                        <td style="color:red"> 
                                                            <t t-esc="line.mid_mark"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td> 
                                                            <t t-esc="line.mid_mark"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
    
                                            <tr style="background-color:#B6FFFA;">
                                                <th colspan="3"><h2>Result</h2></th>
                                            </tr>
                                            <tr>
                                                <th>Total</th>
                                                <td><t t-esc="o.total_marks"/></td>
                                            </tr>
                                            <tr>
                                                <th>Average</th>
                                                <td><t t-esc="o.average_marks"/></td>
                                            </tr>
                                            <tr>
                                                <th>Result</th>
                                                <td><t t-esc="o.result"/></td>
                                            </tr>
                                            <tr>
                                                <th>Grade</th>
                                                <td><t t-esc="o.grade"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <t t-elif="o.exam_type == 'final'">
                                <div class="col-md-4 results-section">
                                    <table class="table subject-marks">
                                        <thead>
                                            <tr style="background-color:#B6FFFA;">
                                                <th>Subjects</th>
                                                <th>Mid Marks</th>
                                                <th>Final Marks</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="o.examination_result_line_ids" t-as="line">
                                                <tr>
                                                    <td><t t-esc="line.subject_id.name"/></td>
                                                    <t t-if="line.mid_mark &lt; 16">
                                                        <td style="color:red"> 
                                                            <t t-esc="line.mid_mark"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td> 
                                                            <t t-esc="line.mid_mark"/>
                                                        </td>
                                                    </t>
                                                    <t t-if="line.final_mark &lt; 40">
                                                        <td style="color:red;">
                                                            <t t-esc="line.final_mark"/>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td>
                                                            <t t-esc="line.final_mark"/>
                                                        </td>
                                                    </t>
                                                    <td><t t-esc="line.total"/></td>
                                                </tr>
                                            </t>
                                            <tr>
                                                <th colspan="4"><h2>Result</h2></th>
                                            </tr>
                                            <tr>
                                                <th colspan="2">Total</th>
                                                <td colspan="2"><t t-esc="o.total_marks"/></td>
                                            </tr>
                                            <tr>
                                                <th colspan="2">Average</th>
                                                <td colspan="2"><t t-esc="o.average_marks"/></td>
                                            </tr>
                                            <tr>
                                                <th colspan="2">Result</th>
                                                <td colspan="2"><t t-esc="o.result"/></td>
                                            </tr>
                                            <tr>
                                                <th colspan="2">Grade</th>
                                                <td colspan="2"><t t-esc="o.grade"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                            <div class="col-md-4 attendance-section">
                                <table class="table attendance-table" style="margin-bottom:500px;">
                                    <tbody>
                                        <tr style="background-color:#B6FFFA;">
                                            <th colspan="3"><h2>Attendance</h2></th>
                                        </tr>
                                        <tr>
                                            <th>Present Day:</th>
                                            <td><t t-esc="o.present_days"/></td>
                                        </tr>
                                        <tr>
                                            <th>Absent Day:</th>
                                            <td><t t-esc="o.absent_days"/></td>
                                        </tr>
                                        <tr>
                                            <th>Leave Day:</th>
                                            <td><t t-esc="o.leave_days"/></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table attendance-table">
                                    <tbody>
                                        <tr style="background-color:#B6FFFA;">
                                            <th>Signatory</th>
                                            <th>Mid Term Exam</th>
                                            <th>Final Exam</th>
                                        </tr>
                                        <tr>
                                            <th>Teacher</th>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>Priciple</th>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>Head Master</th>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th>Parent</th>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
