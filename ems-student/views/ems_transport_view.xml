<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ems_transport_view_form_inherited" model="ir.ui.view">
        <field name="name">ems.transport.view.form.inherit</field>
        <field name="model">ems.transport</field>
        <field name="inherit_id" ref="ems_transport.ems_transport_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page name="students" string="Students">
                        <field name="student_ids">
                            <tree editable="top">
                                <field name="state" invisible="1"/>
                                <field name="name"/>
                                <field name="parent_id" />
                                <field name="nic" />
                                <field name="phone" />
                                <field name="class_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>


    <record id="ems_transport_view_search_inherited" model="ir.ui.view">
        <field name="name">ems.transport.view.search.inherit</field>
        <field name="model">ems.transport</field>
        <field name="inherit_id" ref="ems_transport.ems_transport_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                 <field name="student_name" string="Student Name" />
            </xpath>
        </field>
    </record>

    
</odoo>
