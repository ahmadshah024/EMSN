<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ems_curriculum_view_tree">
      <field name="name">curriculum</field>
      <field name="model">ems.curriculum</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="acadomic_year"/>
          <field name="book_name"/>
        </tree>
        
      </field>
    </record>


    <record id="ems_curriculum_view_search" model="ir.ui.view">
        <field name="name">ems_curriculum_view_search</field>
        <field name="model">ems.curriculum</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"/>
                <field name="book_name" />
            </search>
        </field>
    </record>


    <record id="ems_curriculum_view_form" model="ir.ui.view">
      <field name="name">ems_curriculum_view_form</field>
      <field name="model">ems.curriculum</field>
      <field name="arch" type="xml">
        <form string="">
          <header>
            <button name="action_mark_done" string="Done" type="object" class="oe_highlight"
                    attrs="{'invisible': [('state', 'in', ('cancel','done'))]}"/>
            <button name="action_mark_cancel" string="Cancel" type="object" class="oe_highlight"
                    attrs="{'invisible': [('state', 'in', ('done','cancel'))]}"/>   
            <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel,"/>
        </header>
          <sheet>
            <div class="oe_title">
                <h1>
                  <field name="reference"/>
                </h1>
            </div>
            <group>
              <group>
                <field name="name" placeholder="Name"/>
              </group>
              <group>
                <field name="acadomic_year"/>
              </group>
            </group>
            <notebook>
              <page name="book" string="Books">
            <field name="book_ids">
                <tree editable="top">
                    <field name="name"/>
                    <field name="publication_date"/>
                    <field name="author"/>
                    <field name="pages"/>
                </tree>
            </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="curriculum.action_window">
      <field name="name">ems.curriculum</field>
      <field name="res_model">ems.curriculum</field>
      <field name="view_mode">tree,form</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="Curriculum" id="curriculum.menu_root"  web_icon="curriculum,static/description/icon.png"/>

    <!-- menu categories -->

    <menuitem name="Curriculum" id="curriculum.menu_1" parent="curriculum.menu_root" action="curriculum.action_window"/>

    <!-- actions -->
<!--
    <menuitem name="List" id="curriculum.menu_1_list" parent="curriculum.menu_1"
              action="curriculum.action_window"/>
    <menuitem name="Server to list" id="curriculum" parent="curriculum.menu_2"
              action="curriculum.action_server"/>
-->
  </data>
</odoo>