<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ems_transport_teacher_view_form_inherited" model="ir.ui.view">
        <field name="name">ems.transport.teacher.view.form.inherit</field>
        <field name="model">ems.transport</field>
        <field name="inherit_id" ref="ems_transport.ems_transport_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='students']" position="after">
                    <page name="employees" string="Employees">
                        <field name="teacher_ids">
                            <tree editable="top">
                                <field name="company_id" invisible="1"/>
                                <field name="name"/>
                                <field name="job_title" />
                                <field name="department_id" />
                                <field name="work_phone" />
                            </tree>
                        </field>
                    </page>
            </xpath>
        </field>
    </record>

</odoo>
